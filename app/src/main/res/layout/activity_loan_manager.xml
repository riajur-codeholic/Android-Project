<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#F6F1EA"
    tools:context="com.coderchef.mywallet.LoanManager">



    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:hint="Name Here"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:textColor="#545352"
        android:background="@drawable/input_field_background"
        android:id="@+id/loanHolderName"
        android:textStyle="italic" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#545352"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/loanHolderName"
        android:layout_alignEnd="@+id/loanHolderName"
        android:layout_marginRight="260dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="70dp">
        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:hint="Phone Number"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#545352"
            android:background="@drawable/input_field_background"
            android:id="@+id/loanHolderPhoneNumber" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#545352"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/loanHolderPhoneNumber"
            android:layout_marginRight="260dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="130dp">
        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:hint="Amount"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#545352"
            android:background="@drawable/input_field_background"
            android:id="@+id/loanHolderAmount" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Amount"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#545352"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/loanHolderAmount"
            android:layout_marginRight="260dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="190dp">
        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:hint="Address"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#545352"
            android:background="@drawable/input_field_background"
            android:id="@+id/loanHolderAddress" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Address"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#545352"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/loanHolderAddress"
            android:layout_marginRight="260dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="250dp">
        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:hint="DD/MM/YYYY"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#545352"
            android:background="@drawable/input_field_background"
            android:id="@+id/startDate" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#545352"
            android:id="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/startDate"
            android:layout_marginRight="260dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginTop="310dp">
        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:hint="DD/MM/YYYY"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:textSize="20dp"
            android:textColor="#545352"
            android:background="@drawable/input_field_background"
            android:id="@+id/endDate" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="End"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#545352"
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/endDate"
            android:layout_marginRight="260dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="370dp"
        android:layout_height="60dp">

        <RadioButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:text="Give"
            android:textSize="20dp"
            android:textColor="#545352"
            android:id="@+id/radioButtonGive" />

        <RadioButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Take"
            android:textSize="20dp"
            android:textColor="#545352"
            android:layout_marginLeft="260dp"
            android:id="@+id/radioButtonTake" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="415dp"
        android:layout_height="60dp">


        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:text="Submit"
            android:id="@+id/loanHolderButtonSubmit"
            android:textSize="20dp"
            android:textColor="#545352"
            android:background="@drawable/loan_button_background"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
