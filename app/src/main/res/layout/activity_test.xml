<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/megento"
    tools:context="com.coderchef.mywallet.TestActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="90dp"
        android:paddingLeft="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/log"
            android:textStyle="bold"
            android:paddingLeft="70dp"
            android:paddingBottom="15dp"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:id="@+id/textView" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/testborders"
            android:hint="Username"
            android:paddingLeft="15dp"
            android:id="@+id/userNameField"
            android:textStyle="normal"
            android:textSize="25dp"
            android:textIsSelectable="false" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="210dp"
        android:paddingLeft="50dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:background="@drawable/testborders"
            android:paddingLeft="15dp"
            android:hint="Password"
            android:textStyle="normal"
            android:textSize="25dp"
            android:id="@+id/passwordField" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="280dp"
        android:paddingLeft="110dp">

        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="@string/log"
            android:textSize="25dp"
            android:textColor="#ff4552"
            android:background="@drawable/btn_background"
            android:id="@+id/loginButton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="410dp"
        android:paddingLeft="60dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/sign_up"
            android:textColor="#ff4552"
            android:paddingRight="40dp"
            android:textSize="23dp"
            android:paddingBottom="10dp"
            android:background="@color/megento"
            android:id="@+id/signUpButton" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:background="#C82929"
            android:id="@+id/textView2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textSize="23dp"
            android:textColor="#ff4552"
            android:background="@color/megento"
            android:paddingLeft="45dp"
            android:paddingBottom="10dp"
            android:id="@+id/helpButton" />
    </LinearLayout>

</RelativeLayout>
